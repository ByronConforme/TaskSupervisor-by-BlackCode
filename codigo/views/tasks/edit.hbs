<form action="/tasks/edit/{{tarea.id}}" method="POST" class="form-register">
                    <h2 class="formtitulo">Ingrese sus nuevos datos</h2>
                    <div class="contenedor1-inputs">
                    <div>
                        Titulo:
                    </div>
                    <div>
                        <input type="text1" value="{{tarea.titulo}}" name="titulo" placeholder="Titulo" class="input-100" autofocus>
                    </div>
                    <div>
                        Descripción:
                    </div>
                    <div>
                        <input type="text2" value="{{tarea.descripcion}}" name="descripcion" placeholder="Descripción" class="input-100">
                    </div>
                    <div>
                        Tiempo:
                    </div>
                    <div>
                        <input type="time" value="{{tarea.tiempo_tarea}}" name="tiempo_tarea" class="input-100">
                    </div>
                    <div>
                        Tipo de tarea:
                    </div>
                    <div>
                        <select type="select" name="tipo_tarea" class="input-100">
                            <option value="Ocasional" {{isSelected "Ocasional" tarea.tipo_tarea}}>Ocasional</option>
                            <option value="Diaria" {{isSelected "Diaria" tarea.tipo_tarea}}>Diaria</option>
                        </select>
                    </div>
                    <div>
                        Observación:
                    </div>
                    <div>
                        <input type="textarea" value="{{tarea.observacion}}" name="observacion" class="input-100">
                    </div>
                    <div>
                        <button>
                            Guardar
                        </button>
                    </div>
                    </div>
</form>
